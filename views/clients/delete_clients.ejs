<head>
  <%- include('../partials/head') %>
  <title>SGV | Consultar Clientes</title>
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/navbar') %>

  <!-- Contenido -->
  <section id="services" class="services">
    <div class="container">
      <br>
      <br>
      <br>
      <br>
      <div class="section-title" data-aos="fade-up">
        <h2>ELIMINAR CLIENTES</h2>
        <br>
        <p>Elimine clientes existentes en espec√≠fico.</p>
      </div>
      <div class="container p-4">
        <div class="row">
          <% clients.forEach(function (client) { %>
          <div class="col-md-4">
            <div class="card mb-3">
              <div class="card-header-delete">
                <div class="avatar-delete">
                  <img src="<%= client.imagen || 'https://i.pinimg.com/236x/e3/a8/1f/e3a81f643ac8b306f2534cb84de0990d.jpg' %>" alt="Avatar">
                </div>
              </div>
              <div class="card-body">
                <h2 class="card-title text-center"><%= client.nombre %> <%= client.apellido %></h2>
              </div>
              <div class="card-footer">
                <p class="card-text text-center"><%= client.dni %></p>
                <p class="card-text text-center"><%= client.valor %></p>
                <p class="card-text text-center"><%= client.tipo %></p>
                <button class="btn delete-button" onclick="confirmarEliminacion('<%= client.id %>')"><i class="fas fa-trash"></i> Eliminar</button>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
      <div class="text-center">
        <a href="/gestion_clientes" class="btn btn-primary"><i class="fas fa-home"></i> Regresar</a>
      </div>
    </div>
  </section>

  <!-- Scripts -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
  <%- include('../partials/footer') %>
</body>
</html>
