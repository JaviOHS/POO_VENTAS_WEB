<head>
  <%- include('../partials/head') %>
    <title>SGV | Crear Productos</title>
</head>

<body>
  <%- include('../partials/navbar') %>
    <!-- Contenido -->
    <section id="services" class="services">
      <div class="container">
        <br>
        <br>
        <br>
        <br>
        <div class="section-title" data-aos="fade-up">
          <h2>INGRESAR PRODUCTOS</h2>
          <br>
          <p>Ingrese los datos para registrar un nuevo producto.</p>
        </div>
        <form id="form" class="card card-body" method="POST" action="/products/create">
          <fieldset>
            <div class="row">
              <div class="col-md-4">
                <div class="mb-3">
                  <label for="id" class="form-label">ID del producto:</label>
                  <input type="number" class="form-control" id="id" name="id" required>
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  <label for="descripcion" class="form-label">Descripci√≥n del producto:</label>
                  <input type="text" class="form-control" id="descripcion" name="descripcion" required>
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  <label for="precio" class="form-label">Precio del producto:</label>
                  <input type="text" class="form-control" id="precio" name="precio" required>
                </div>
              </div>
              <div class="col-md-4">
                <div class="mb-3">
                  <label for="stock" class="form-label">Stock de producto en bodega:</label>
                  <input type="number" class="form-control" id="stock" name="stock" required>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <label for="imagen" class="form-label">URL Imagen del producto referencial:</label>
              <input type="text" class="form-control" id="imagen" name="imagen">
            </div>

            <div class="text-center">
              <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Guardar cambios</button>
            </div>
          </fieldset>
        </form>
        <div class="text-center">
          <a href="/gestion_productos" class="btn btn-primary"><i class="fas fa-home"></i> Regresar</a>
        </div>
      </div>
    </section>
    <script src="/js/validaciones.js"></script>
    <%- include('../partials/footer') %>
</body>