<head>
  <%- include('../partials/head') %>
  <title>SGV | Eliminar Productos</title>
</head>
<body>
  <!-- Navbar -->
  <%- include('../partials/navbar') %>

  <!-- Contenido -->
  <section id="services" class="services">
    <div class="container">
      <br>
      <br>
      <br>
      <br>
      <div class="section-title" data-aos="fade-up">
        <h2>ELIMINAR PRODUCTOS</h2>
        <br>
        <p>Elimine productos específicos.</p>
      </div>
      <div class="container p-4">
        <div class="row">
          <% products.forEach(function (product) { %>
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header-delete">
                        <div class="avatar-delete">
                            <img src="<%= product.imagen || 'https://cdn-icons-png.flaticon.com/512/12267/12267913.png' %>" alt="Avatar">
                        </div>
                    </div>
                    <div class="card-body">
                        <h2 class="card-title text-center"><%= product.descripcion %></h2>
                    </div>
                    <div class="card-footer">
                        <h3>ID: </h3>
                        <p class="card-text text-center"><%= product.id %>  </p>
                        <h3>Precio: </h3>
                        <p class="card-text text-center"><%= product.precio %>  </p>
                        <h3>Stock: </h3>
                        <p class="card-text text-center"><%= product.stock %></p>
                        <!-- Agregamos un botón de eliminación que llama a la función confirmarEliminacion -->
                        <button class="btn delete-button" onclick="confirmarEliminacionProducto('<%= product.id %>')"><i class="fas fa-trash"></i> Eliminar</button>
                    </div>
                </div>
            </div>
        <% }) %>
        
        </div>
      </div>
      <div class="text-center">
        <a href="/gestion_productos" class="btn btn-primary"><i class="fas fa-home"></i> Regresar</a>
      </div>
    </div>
  </section>

  
  <!-- Scripts -->
  <%- include('../partials/footer') %>
</body>
</html>